@inherits LayoutComponentBase

@using BB.eu.Shared.Models
@implements IDisposable

@inject Data.LoginState loginState

<div class="page">
    @* <div class="sidebar"> *@
    @* <NavMenu/> *@
    @* </div> *@

    <div class="main">
        <NavLink class="nav-link navbar-text float-left" href="" Match="NavLinkMatch.All">
            <span class="oi oi-home" aria-hidden="true"></span> Home
        </NavLink>
        <div class="top-row px-2">
            @if (loginState.IsLoggedIn.Equals(false))
            {
                <NavLink class="nav-link" href="RenterProfile">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Login
                </NavLink>

                <NavLink class="nav-link" href="RegisterRenterAccount">
                    <span class="oi oi-person" aria-hidden="true"></span> Register konto
                </NavLink>
            }
            else
            {
                <div class="top-row px-2">
                    <NavLink class="nav-link" href="RenterProfile">
                        <span class="oi oi-person" aria-hidden="true"></span> Profile
                    </NavLink>
                    <button @onclick="Logout" class="btn-primary">Logout</button>
                </div>
            }
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code
{
    private void Logout()
    {
        loginState.SetLogin(false, new Renter());
    }

    protected override void OnInitialized()
    {
        loginState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        loginState.OnChange -= StateHasChanged;
    }
}